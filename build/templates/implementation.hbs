<div class="backnav">
  <a href="{{framework}}_list.html">all imlementations using {{niceFrameworkName}}</a>
  <a href="{{demoName}}_impl.html">all imlementations of {{niceDemoName}}</a>
</div>

<h3>
  <span>{{prefix}} </span>{{title}}<span> implementation <br/>
  of the <a href="{{demoName}}_info.html">{{niceDemoName}}</a> demo
  using <a href="{{framework}}_info.html">{{niceFrameworkName}}</a>
  </span>
</h3>

<ul class="iconnav">
  {{#each links}}
    <li class="{{#if active}}current{{/if}} {{#if info}}info{{else}}file{{/if}}">
      <a href="{{url}}">{{to}}</a>
    </li>
  {{/each}}
</ul>

<div class="content">

{{#if isInfo}}
  <div id='appcontainer'>
    {{#if appTemplate}}
      {{{appTemplate}}}
    {{else}}
      <div id='app'></div>
    {{/if}}
  </div>
  <script src="scripts/{{bundleName}}"></script>
  <table class="impltable">
    <thead>
      <th>Framework</th><th>Code size</th><th>Bundle size</th><th>Author</th><th>Github</th>
    </thead>
    <tbody>
      <tr>
        <td><a href="{{framework}}_info.html">{{niceFrameworkName}}</a> <span class="version">{{frameworkVersion}}</span></td>
        <td class="text-right">{{size}}</td>
        <td class="text-right">{{bundleSize}}</td>
        <td><a href="http://github.com/{{author}}" target="_blank">{{author}}</a></td>
        <td><a href="{{githubUrl}}" target="_blank">link</a></td>
      </tr>
    </tbody>
  </table>

  {{{explanation}}}
  
  <!--<div class="deps">
    <h4>Dependencies</h4>
    <ul>
      {{#each deps}}
        <li><a href="http://npmjs.org/package/{{package}}" target="_blank">{{package}}</a> ({{version}})</li>
      {{/each}}
    </ul>
  </div>-->
{{else if isCode}}
  {{#each codeFiles}}
    <h4>{{filename}}{{suffix}} (<a href={{codeUrl}}>compare</a>)</h4>
    <pre><code>{{{code}}}</code></pre>
  {{/each}}
{{else}}
  <div id="codeselector" style="display:none;">
    Compare <code>{{filename}}{{suffix}}</code> to corresponding file in <select id="choosecode"></select>:
  </div>
  <br/><br/>
  <div class="sidebyside">
    <div>
      <pre><code>{{{code}}}</code></pre>
    </div>
    <div>
    {{#each allOthers}}
      {{#if code}}
        <div class="othercode" data-name="{{prefix}} {{title}} implementation using {{niceFrameworkName}}">
          <p class="codeheadline">The same file in <a href="{{url}}">{{prefix}} {{title}} implementation</a> using <a href="{{framework}}_info.html">{{niceFrameworkName}}</a> ({{version}}):</p>
          <pre><code>{{{code}}}</code></pre>
          <a href="{{url}}" class="codelink" style="display:none;">visit this implementation</a>
          <br/>
          <button class="codelink hider" style="display:none;">hide</button>
        </div>
      {{/if}}
    {{/each}}
    </div>
  </div>
{{/if}}

</div>